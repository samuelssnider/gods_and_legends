<div class="container">
  <div class="row">
    <div class="col-3">
    <table class="table">
      <%= form_for @user do |f| %>
      <tr>
        <td class="table-light"><%= f.label :username %></td>
        <td class="table-light"><%= f.text_field :username %></td>
      </tr>
        <tr>
          <td class="table-light"><%= f.label :email %></td>
          <td class="table-light"><%= f.text_field :email %></td>
        </tr>
        <tr>
          <td class="table-light"><%= f.label :password %></td>
          <td class="table-light"><%= f.password_field :password %></td>
        </tr>
        <tr class="action">
          <td class="table-light"><%= f.submit %></td>
          <td class="table-light"></td>
        </tr>
      <% end %>
    </div>
  </div>
</div>