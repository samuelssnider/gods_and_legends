<div class='container'>
  <div class='row'>
    <div class='myth'>
      <h3 class='right-justify'><%= link_to "All Mythologies", mythologies_path %></h3>
      <h3>Mythology: <span class='double_italic'><%= @mythology.name %></span></h3>
      <p class='margin-the-left the-italic'><%= @mythology.origin_story %></p>
    </div>
    <div class='row-center eighty-percent'>
      <%= image_tag "#{@mythology.name}.jpeg", class: 'eighty-percent' %>
    </div>
  </div>
</div>
<div class='row'>
  <div class='card-body'>
    <table class ="table">
      <thead>
        <tr>
          <th></th>
          <th>Book</th>
          <th>Authors</th>
          <th>Publisher</th>
        </tr>
      </thead>
      <tbody>
        <% @mythology.find_books_with_subject.each do |book| %>
          <% if book.image %>
            <td class='book-image'><%= image_tag book.image %></td>
          <% else %>
            <td></td>
          <% end %>
          <td class='book-title'><%= link_to book.title, book.store_link %></td>
          <% if book.authors %>
            <td class='book-author'><% book.authors.each do |author| %>
               <%= author %> <br />
             <% end %> </td>
          <% else %>
              <td></td>
          <% end %>
          <% if book.publisher %>
          <td class='book-publisher'><%= book.publisher %></td>
          <% else %>
            <td></td>
          <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>