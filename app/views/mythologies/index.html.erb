<div class='container'>
  <div class='row'>
    <% @mythologies.each do |mythology| %>
    <div class='myth'>
      <h3>Mythology: <span style='font-family:italic; font-style:italic;'><%= mythology.name %></span></h3>
      <p class='margin-the-left the-italic'><%= mythology.origin_story %></p>
    </div>
    <div class='row-center eighty-percent'>
      <%= image_tag "#{mythology.name}.jpeg", class: 'eighty-percent' %>
    </div>
    <% end %>
  </div>
</div>